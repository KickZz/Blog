{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="well ">
<h2 class="text-center">Administration</h2>
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username" class="control-label required">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />

    <label for="password" class="control-label required">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" class="form-control" name="_password" required="required" /><br>
    
    <input type="checkbox"   id="remember_me" name="_remember_me" value="on" />
    <label class="control-label required" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
</div>
