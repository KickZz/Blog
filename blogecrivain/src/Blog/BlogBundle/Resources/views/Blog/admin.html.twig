{% extends "BlogBlogBundle::layout.html.twig" %} {% block bodyadmin %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            {# On affiche tous les messages flash dont le nom est « notice » #} {% for message in app.session.flashbag.get('notice')%}
            <div class="alert alert-success ">{{ message }}</div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#edition" data-toggle="tab" id="onglet">Nouvel Article</a></li>
                <li><a href="#article" data-toggle="tab" id="onglet">Mes Articles</a></li>
                <li><a href="#commentaire" data-toggle="tab" id="onglet">Commentaire(s) Signalé(s)</a></li>
            </ul>
        </div>
        <div class="col-md-10">
            <div class="tab-content">
                <div class="tab-pane fade active in" id="edition">{{ include("BlogBlogBundle:Blog:formajoutarticle.html.twig") }} </div>
                <div class="tab-pane fade" id="article">
                    <div class="container-fluid">
                        <div id="mesarticles" class="panel-group ">

                            {% for article in listeArticle %}

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h2 class="panel-title">
                                    <a href="#{{ article.id }}" data-parent="#mesarticles" data-toggle="collapse"> {{ article.titre }} par {{ article.auteur }} le {{ article.datePublier|date ('d.m.Y') }} à {{ article.datePublier|date ("H\\hi") }}</a> 
                                </h2>
                                </div>
                                <div id="{{ article.id }}" class="panel-collapse collapse ">
                                    <div class="panel-body">

                                        <form action="{{path ('blog_blog_update', { 'id': article.id})}}" method="post">
                                            <div class="form-group ">
                                                <label class="control-label required" for="titre">Titre</label>
                                                <input type="text" name="titre" required="required" class="form-control" value="{{article.titre}}">
                                            </div>
                                            <div class="form-group ">
                                                <label class="control-label required" for="contenu">Contenu</label>
                                                <textarea type="textarea" name="contenu" required="required" class="form-control tinymce">{{article.contenu}}</textarea>
                                            </div>
                                            <div class="form-group ">
                                                <label class="control-label required" for="auteur">Auteur</label>
                                                <input type="text" name="auteur" required="required" class="form-control" value="{{article.auteur}}">
                                            </div>
                                            <div class="col-md-1">
                                                <input type="submit" class="btn btn-success" value="Editer">
                                            </div>
                                        </form>

                                        <div class="">
                                            <div class="container">
                                                <div id="html">
                                                    <button data-toggle="modal" data-backdrop="false" href="#formulaire{{ article.id }}" class="btn btn-danger">Supprimer</button>
                                                </div>
                                                <div class="modal fade" id="formulaire{{ article.id }}">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">x</button>
                                                                <h3 class="modal-title">Etes-vous sûr de vouloir supprimer cet article ?</h3>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="{{ path('blog_blog_supprimer', { 'id': article.id})}}" method="post">
                                                                    <input type="submit" class="btn btn-danger" value="Oui">
                                                                    <button class="btn btn-success" data-dismiss="modal" >Non</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% endfor %}

                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="commentaire">
                    <div class="container-fluid">
                        <div id="mescoms" class="panel-group ">

                            {% for com in listeCom %}
                                {% if com.editer == false %}
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h2 class="panel-title">
                                            <a href="#{{ com.id }}" data-parent="#mescoms" data-toggle="collapse"> Par {{ com.auteur }} le {{ com.datecom|date ('d.m.Y') }}</a> 
                                            </h2>
                                        </div>
                                        <div id="{{ com.id }}" class="panel-collapse collapse ">
                                            <div class="panel-body">
                                                {{com.contenu}}
                                        
                                                    <div class="container">
                                                        <div id="htmlcom">
                                                            <button data-toggle="modal" data-backdrop="false" href="#com{{ com.id }}" class="btn btn-danger">Supprimer</button>
                                                        </div>
                                                        <div class="modal fade" id="com{{ com.id }}">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal">x</button>
                                                                        <h3 class="modal-title">Etes-vous sûr de vouloir supprimer ce commentaire ?</h3>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <form action="{{ path('blog_blog_supprimercom', { 'id': com.id})}}" method="post">
                                                                            <input type="submit" class="btn btn-danger" value="Oui">
                                                                            <button class="btn btn-success" data-dismiss="modal" >Non</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                        
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}